    "@rollup/plugin-typescript": "^4.0.0",
    "@tsconfig/svelte": "^1.0.0",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.1.0",
    "rollup": "^2.3.4",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0",
    "svelte-check": "^1.0.0",
    "svelte-preprocess": "^4.0.0",
    "tslib": "^2.0.0",
    "typescript": "^3.9.3"
  },
  "dependencies": {
    "autoprefixer": "^9.8.6",
    "sirv-cli": "^1.0.0",
    "svelte-preprocess": "^4.2.1",
    "tailwindcss": "^1.8.5"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100,
    "plugins": [
      "prettier-plugin-svelte"
