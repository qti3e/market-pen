{
  "name": "svelte-app",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "sirv public -p 3000 --single",
    "validate": "svelte-check",
    "fmt": "prettier --write src",
    "postinstall": "rollup -c monaco/rollup.config.js && cp /node_modules/monaco-editor/min/vs/base/browser/ui/codicons/codicon/codicon.ttf ./public/monaco/"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@tsconfig/svelte": "^1.0.0",
    "autoprefixer": "^10.2.0",
    "postcss": "^8.2.2",
    "postcss-import": "^14",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.1.0",
    "rollup": "^2.3.4",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-minify": "^1.0.3",
    "rollup-plugin-postcss": "^4.0",
    "rollup-plugin-svelte": "^7.0",
    "rollup-plugin-terser": "^7.0.0",
    "rollup-plugin-uglify": "^6.0.4",
    "svelte": "^3.31",
    "svelte-check": "^1.0.0",
    "svelte-loadable": "^1.5.1",
    "svelte-preprocess": "^4.0.0",
    "svelte-routing": "^1.5.0",
    "tailwindcss": "^2.0.2",
    "tslib": "^2.0.0",
    "typescript": "^3.9.3"
  },
  "dependencies": {
    "monaco-editor": "^0.21.2",
    "sirv-cli": "^1.0.0"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100,
    "plugins": [
      "prettier-plugin-svelte"
    ],
    "svelteSortOrder": "options-styles-scripts-markup",
    "svelteStrictMode": false,
    "svelteBracketNewLine": true
  }
}
